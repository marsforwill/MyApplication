/**
 * 签文等级分类
 */
export enum StickLevel {
  SUPREME = 'supreme',    // 上上签
  GOOD = 'good',          // 上签
  AVERAGE = 'average',    // 中签
  BAD = 'bad'             // 下签
}

/**
 * 签文数据模型
 */
export interface LotteryStick {
  id: number;             // 签号 (1-100)
  name: string;           // 签名 (如 "第一签 上上签")
  level: StickLevel;      // 签文等级
  poem: string;           // 签文诗句
  meaning: string;        // 总体含义
  detail: string;         // 详细解签
  love: string;           // 姻缘运势
  career: string;         // 事业运势
  wealth: string;         // 财运
  health: string;         // 健康运势
}

/**
 * 获取签文等级的中文描述
 */
export function getLevelText(level: StickLevel): string {
  switch (level) {
    case StickLevel.SUPREME:
      return '上上签';
    case StickLevel.GOOD:
      return '上签';
    case StickLevel.AVERAGE:
      return '中签';
    case StickLevel.BAD:
      return '下签';
  }
}

/**
 * 获取签文等级对应的颜色
 */
export function getLevelColor(level: StickLevel): string {
  switch (level) {
    case StickLevel.SUPREME:
      return '#FFD700'; // 金色
    case StickLevel.GOOD:
      return '#FF6B6B'; // 红色
    case StickLevel.AVERAGE:
      return '#4ECDC4'; // 青色
    case StickLevel.BAD:
      return '#95A5A6'; // 灰色
  }
}

/**
 * 随机抽取一支签
 */
export function drawLotteryStick(): LotteryStick {
  const randomIndex = Math.floor(Math.random() * LOTTERY_STICKS.length);
  return LOTTERY_STICKS[randomIndex];
}

